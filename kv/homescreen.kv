#: import utils kivy.utils


<HomeScreen>:
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#4ee69c")
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            pos_hint: {"top":1,"left": .8}
            size_hint: 1, .4
            text: "Welcome to\n[Child's Name] Tracker!"
            id: childname
            font_size: 40
            font_name: 'Calibri'
        Label:
            text: "Please choose from\n an option below"            
            pos_hint: {"top":.8, "left": .8}
            size_hint: 1, .4
            font_size: 40
            font_name: 'Calibri'
        GridLayout:
            cols: 1
            pos_hint:{"top": .55}
            size_hint: 1, .3
            GridLayout:
                rows: 1
                
                ImageButton:
                    source: "icons/scale.png"
                    on_release: app.change_screen("weight_screen")
                ImageButton:
                    source: "icons/clipboard.png"
                    on_release: app.change_screen("wat_screen")
            GridLayout:
                rows: 1
                pos_hint: {"top": .6}
                Label:
                    text: "Weight\nTracker"
                    
                Label:
                    text: "WAT"
                                
        GridLayout:
            cols: 1
            pos_hint: {"top": .3}
            size_hint: 1, .3
            GridLayout:
                rows:1
                ImageButton:
                    pos_hint:{"left":.75}
                    source: "icons/vitalsigns.png"
                    on_release: app.change_screen("weight_screen")
                ImageButton:
                    pos_hint: {"left":.4}
                    source: "icons/graph.png"
                    on_release: app.change_screen("weight_screen")
            GridLayout:
                rows:1
                Label:
                    text: "Vital Signs"
                Label:
                    text: "Graphs"  
