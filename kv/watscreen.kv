#:import utils kivy.utils
<WatScreen>:
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#4ee69c")
            Rectangle:
                size: self.size
                pos: self.size
        Label:
            pos_hint: {"top": 1, "left": 1}
            size_hint: 1, .1
            font_size: 20
            font_name: "Georgia"
            text: "In the previous 12 hours, has your child experienced: "
            
        GridLayout:
            cols:3
            pos_hint:{"top":.9, "left":1}
            size_hint: 1, .15
            Label:
                text: "Any loose or watery stools"
            ToggleButton:
                text:"Yes"
                on_press: app.btnadd(self)
            ToggleButton:
                text:"No"
                on_press: app.btnmin(self)
            Label:
                text: "Any vomiting, retching, or gagging"
            ToggleButton:
                text:"Yes"
                on_press: app.btnadd(self)
            ToggleButton:
                text:"No"
                on_press: app.btnmin(self)
            Label:
                text: "Temperature >100F (37.8C)"                 
            ToggleButton:
                text:"Yes"
                on_press: app.btnadd(self)           
            ToggleButton:
                text:"No"
                on_press: app.btnmin(self)

        Label:
            text: "Prior to your normal care of your child, do you observe any of the following"
            pos_hint:{"top":.78, "left":1}
            size_hint: 1, .1
            font_size: 20
            font_name: "Georgia"
        GridLayout:
            cols:3
            pos_hint:{"top":.7, "left":1}
            size_hint: 1, .15
            Label:
                text: "State Behavioral Scale (SBS)"
            ToggleButton:
                text:"Asleep OR awake and calm"
                on_press: app.btnmin(self)
                                    
            ToggleButton:
                text:"Awake AND distressed"
                on_press: app.btnadd(self)
            Label:
                text: "Tremors"
            ToggleButton:
                text:"None or Mild"
                on_press: app.btnmin(self)
            ToggleButton:
                text:"Moderate to Severe"
                on_press: app.btnadd(self)
            Label:
                text: "Any Sweating"                 
            ToggleButton:
                text:"Yes"
                on_press: app.btnadd(self)           
            ToggleButton:
                text:"No"
                on_press: app.btnmin(self)
            
            Label:
                text: "Yawning or Sneezing"                 
            ToggleButton:
                text:"0-1 times"
                on_press: app.btnmin(self)           
            ToggleButton:
                text:"> or + = 2 times"
                on_press: app.btnadd(self)
        Label:
            text: "Answer based on at least one minute of interaction with child"
            pos_hint:{"top":.57, "left":1}
            size_hint: 1, .1
            font_size: 20
            font_name: "Georgia"
        GridLayout:
            cols:3
            pos_hint:{"top":.5, "left":1}
            size_hint: 1, .1
            Label:
                text: "Startle to Touch"                 
            ToggleButton:
                text:"None or mild"
                on_press: app.btnmin(self)           
            ToggleButton:
                text:"Moderate to severe"
                on_press: app.btnadd(self)

            Label:
                text: "Muscle Tone"                 
            ToggleButton:
                text:"None or mild"
                on_press: app.btnmin(self)           
            ToggleButton:
                text:"Moderate to severe"
                on_press: app.btnadd(self)

        Label:
            text: "Answer based on child's state at least one minute after interaction has stopped"
            pos_hint:{"top":.4, "left":1}
            size_hint: 1, .1
            font_size: 20
            font_name: "Georgia"
        GridLayout:
            cols:4
            pos_hint:{"top":.3, "left":1}
            size_hint: 1, .1
            Label:
                text:"Time to gain calm state"
            ToggleButton:
                text:" < 2 minutes"
                on_press: app.btnmin(self)
            ToggleButton:
                text:"2 - 5 minutes"
                on_press: app.btnadd(self)
            ToggleButton:
                text:"> 5 minutes"
                on_press: app.btnthree(self)           

        Button:
            pos_hint:{"top": .2,"left":1}
            size_hint: 1, .1
            text:"Submit"
            on_release: 
                app.change_screen("result_screen")
                print("Watscore:",app.watscore)
                
        Button:
            pos_hint:{"top": .1,"left":1}
            size_hint: 1, .1
            text: "Return to Home Screen"
            on_release: app.change_screen("home_screen")