#:import utils kivy.utils
<ResultScreen>:
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#4ee69c")
            Rectangle:
                size: self.size
                pos: self.pos
        GridLayout:
            cols:1
            Label:
                pos_hint: {"top": 1, "left": 1}
                size_hint: 1, .1
                font_size: 20
                text: "Watscore"

            Button:
                pos_hint: {"top": .6, "left": 1}
                size_hint: .4, .4
                font_size: 20
                text: "Home Screen"
                on_release: 
                    app.change_screen("home_screen")
            Button:
                pos_hint: {"top": .3, "left": 1}
                size_hint: .4, .4
                font_size: 20
                text: "WAT Scorecard"
                on_release: 
                    app.change_screen("wat_screen")