#: import utils kivy.utils

<DemoScreen>:
    FloatLayout:
        cols:1
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#4ee69c")
            Rectangle:
                size: self.size
                pos: self.pos       
        Label:
            text: "Please enter your child's information"
            font_size: 40
            pos_hint: {"top": 1, "left": 1}
            size_hint: 1, .3
                    
        GridLayout:
            cols:2
            pos_hint:{"top": .7, "left":1}
            size_hint: 1, .4
            font_size: 14
            #I decided to use button instead of Label here due to formatting preferences
            Button:
                border:(16,16,16,16)
                text: "Patient First Name: "                
            TextInput:
                id: fname
                multinline:False

            Button:
                text: "Patient Last Name: "
                border: (16,16,16,16)

            TextInput:
                id: lname
                multiline:False

            Button:
                text: "Patient DOB (mm/dd/yy): "
                border:(16,16,16,16)

            TextInput:
                id: dob
                multiline:False

            Button:
                text: "Patient MRN (if known): "
                border: (16,16,16,16)

            TextInput:
                id: mrn
                multiline:False

        Button:
            pos_hint:{"top": .3, "left": 1}
            size_hint: 1, .2
            font_size: 40
            font_name: 'Georgia'
            text:"Submit"
            on_release: app.change_screen("wat_screen")
        Button:
            pos_hint:{"top": .15, "left":1}
            size_hint: 1, .2
            font_size: 20
            font_name: 'Georgia'
            text:"Return to Home Screen"
            on_release: app.change_screen("home_screen")
